<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:padding="@dimen/s10" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/s10"
        android:text="امتیاز ها"
        android:textColor="#ffffff"
        android:textSize="@dimen/fs20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ffffff" />

     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/s15"
        android:text="بالاترین امتیاز در دستگاه خودتان"
        android:textColor="#bbbbbb"
        android:textSize="@dimen/fs18" />
     
     <TextView
        android:id="@+id/score_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/s20"
        android:padding="@dimen/s10"
        android:textColor="#ffffff"
        android:textSize="@dimen/fs25" />
     
      <TextView
        android:id="@+id/date_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/s5"
        android:padding="@dimen/s10"
        android:textColor="#ffffff"
        android:textSize="@dimen/fs20" />
      
      <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ffffff" />
      
       <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/s15"
        android:text="بالاترین امتیاز در بین همه کاربران"
        android:textColor="#bbbbbb"
        android:textSize="@dimen/fs18" />
     
     <TextView
        android:id="@+id/score_global"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/s20"
        android:padding="@dimen/s10"
        android:textColor="#ffffff"
        android:textSize="@dimen/fs25" />
     
     <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/s10"
        android:textColor="#ffffff"
        android:textSize="@dimen/fs20" />
     
     <TextView
        android:id="@+id/date_global"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/s10"
        android:textColor="#ffffff"
        android:textSize="@dimen/fs20" />
</LinearLayout>